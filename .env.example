# Typefully Configuration
# Get API key from https://typefully.com/settings/api
TYPEFULLY_API_KEY=your_typefully_api_key_here

# Gemini AI Configuration
# Get API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Scheduling Configuration
# Hours to delay before publishing (default: 6)
# Upload at 11 AM SGT -> Publish at 5 PM SGT
TYPEFULLY_HOURS_DELAY=6

# Target publish hour in Singapore time (24-hour format)
# Default: 17 = 5 PM SGT
PUBLISH_HOUR_SGT=17

# Upload schedule time in Singapore time (for cron-like scheduling)
# Default: 11:00 (11 AM SGT, 6 hours before 5 PM publish time)
UPLOAD_TIME_SGT=11:00

# Bot Configuration
PROJECTS_COUNT=10
SUMMARY_MAX_WORDS=10

# Path to cookies file (optional, defaults to credentials/cookies.json)
# COOKIES_PATH=/path/to/cookies.json

# Logging
LOG_LEVEL=INFO
